<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/recipe_cv"
   >


<LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/recipe_padding"
    android:paddingBottom="@dimen/recipe_padding"
    android:background="@drawable/list_item_selector"
    android:layout_margin="@dimen/recipe_margin"
    >

    <ImageView
        android:id="@+id/recipe_icon"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_weight="0"
        app:srcCompat="@drawable/ic_dish"
        android:padding="5dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="5"
        android:paddingStart="@dimen/recipe_padding"
        android:paddingLeft="@dimen/recipe_padding"
        android:padding="@dimen/padding_5dp">

        <TextView
            android:id="@+id/recipe_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="@string/recipe_name"
            android:textStyle="bold"
            android:textSize="20sp"
            android:paddingTop="@dimen/padding_5dp"/>

        <TextView
            android:id="@+id/recipe_servings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="@string/servings"
            android:paddingTop="@dimen/padding_5dp"/>
    </LinearLayout>

</LinearLayout>


</android.support.v7.widget.CardView>
